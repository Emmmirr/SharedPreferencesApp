<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Parte Superior: Detalle de la fecha seleccionada (sin card, contenido suelto) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/layoutDetalleFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@color/primary_light_1">

            <!-- Nombre de la actividad a la izquierda, fecha a la derecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <!-- Nombre de la actividad (izquierda) -->
                <TextView
                    android:id="@+id/tvNombreActividad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre de la Actividad"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <!-- Fecha (derecha) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvDiaNumero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvMesAno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jan, 2024"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Calendario visual -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true">

                    <CalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minDate="0"
                        android:maxDate="4102444800000"
                        android:firstDayOfWeek="2"
                        android:showWeekNumber="false"
                        android:enabled="false"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusedMonthDateColor="@color/primary"
                        android:selectedWeekBackgroundColor="@color/primary_light_2"
                        android:weekSeparatorLineColor="@color/primary_light_3" />

                    <!-- Vista transparente que bloquea todos los toques -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:focusable="true" />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Días restantes -->
            <TextView
                android:id="@+id/tvDiasRestantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Días restantes: --"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="24dp" />

            <!-- Botones de acción: Subir/Sustituir y Ver -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp">

                <!-- Botón para subir/sustituir documento -->
                <LinearLayout
                    android:id="@+id/btnSubirDocumento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/button_rounded_primary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="2dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:id="@+id/ivIconoSubir"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_upload"
                        app:tint="@color/button_text_light"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvTextoSubir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subir Documento"
                        android:textColor="@color/button_text_light"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Botón para ver documento -->
                <LinearLayout
                    android:id="@+id/btnVerDocumento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/button_rounded_primary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="2dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_view"
                        app:tint="@color/button_text_light"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver"
                        android:textColor="@color/button_text_light"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Mensaje cuando no hay calendario -->
            <TextView
                android:id="@+id/tvNoCalendario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tu supervisor aún no te ha asignado un calendario."
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:padding="20dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <!-- Parte Inferior: Lista vertical apilada de fechas -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_light"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:maxHeight="200dp">

        <LinearLayout
            android:id="@+id/layoutFechasLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

    </ScrollView>

</LinearLayout>

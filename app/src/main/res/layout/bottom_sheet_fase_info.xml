<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tvTituloFase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre de la Fase"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <ImageView
            android:id="@+id/ivCerrar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Estado en pill -->
    <LinearLayout
        android:id="@+id/pillEstadoInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/pill_time_background"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/ivIconoPillInfo"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_calendar"
            app:tint="@color/primary"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/tvEstadoPillInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha pendiente"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

    </LinearLayout>

    <!-- Descripci칩n -->
    <TextView
        android:id="@+id/tvDescripcionFase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripci칩n del proceso"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:lineSpacingMultiplier="1.4" />

    <!-- Informaci칩n adicional (fecha si est치 disponible) -->
    <TextView
        android:id="@+id/tvFechaInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="13sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

</LinearLayout>


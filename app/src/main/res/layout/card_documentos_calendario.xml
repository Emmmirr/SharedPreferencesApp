<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- InformaciÃ³n del Alumno -->
        <TextView
            android:id="@+id/tvNombreAlumnoDoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Alumno"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNumControlDoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No. Control"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#DDDDDD" />

        <!-- Documento 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvLabelDoc1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Actividad 1" />

            <Button
                android:id="@+id/btnSubirDoc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subir PDF"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/btnVerDoc1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_gallery"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Ver PDF" />
        </LinearLayout>

        <!-- Documento 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvLabelDoc2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Actividad 2" />

            <Button
                android:id="@+id/btnSubirDoc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subir PDF"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/btnVerDoc2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_gallery"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Ver PDF" />
        </LinearLayout>

        <!-- Documento 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvLabelDoc3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Actividad 3" />

            <Button
                android:id="@+id/btnSubirDoc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subir PDF"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/btnVerDoc3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_gallery"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Ver PDF" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
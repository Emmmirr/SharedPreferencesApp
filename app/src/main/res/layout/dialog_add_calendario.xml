<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E0F7FA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTituloFormulario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestión de Calendario"
            android:textColor="#1A202C"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />

        <!-- Selector de Alumno -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/libro"
                        android:layout_marginEnd="12dp"
                        android:tint="#4299E1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selección de Alumno"
                        android:textColor="#4299E1"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <Spinner
                    android:id="@+id/spinnerAlumno"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#F7FAFC"
                    android:padding="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Título de Cronograma -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cronograma de Residencia"
                android:textColor="#1A202C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnBorrarFechas"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="BORRAR FECHAS"
                android:textSize="10sp"
                android:background="#E53E3E"
                android:textColor="#FFFFFF"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Card 1: Entrega anteproyecto -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#B3E5FC">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/libro"
                    android:layout_marginEnd="16dp"
                    android:tint="#1976D2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 Entrega anteproyecto"
                        android:textColor="#1A202C"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvFechaAnteproyecto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha: Sin asignar"
                        android:textColor="#4299E1"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- ⬅️ ICONO CALENDARIO + ICONO GUARDAR -->
                <ImageView
                    android:id="@+id/btnCalendarioAnteproyecto"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:tint="#1976D2" />

                <ImageView
                    android:id="@+id/btnGuardarAnteproyecto"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_save"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:tint="#1976D2"
                    android:enabled="false"
                    android:alpha="0.5" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card 2: Entrega de Viabilidad -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#B3E5FC">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/libro"
                    android:layout_marginEnd="16dp"
                    android:tint="#1976D2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Entrega de Viabilidad"
                        android:textColor="#1A202C"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvFechaViabilidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha: Sin asignar"
                        android:textColor="#4299E1"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/btnCalendarioViabilidad"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:tint="#1976D2" />

                <ImageView
                    android:id="@+id/btnGuardarViabilidad"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_save"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:tint="#1976D2"
                    android:enabled="false"
                    android:alpha="0.5" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card 3: Entrega de modificación -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="15dp"

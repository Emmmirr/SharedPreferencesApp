                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvFechaSegundoSeguimiento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha: Sin asignar"
                        android:textColor="#4299E1"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/btnCalendarioSegundoSeguimiento"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:tint="#1976D2" />

                <ImageView
                    android:id="@+id/btnGuardarSegundoSeguimiento"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_save"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:tint="#1976D2"
                    android:enabled="false"
                    android:alpha="0.5" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card 8: Entrega final -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#B3E5FC">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/libro"
                    android:layout_marginEnd="16dp"
                    android:tint="#1976D2" />

                <LinearLayout
                    android:layout_width="0dp"

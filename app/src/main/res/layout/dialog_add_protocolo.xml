<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTituloFormulario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo Protocolo"
            android:textColor="#1A202C"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Información del Protocolo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Información del Protocolo"
            android:textColor="#4299E1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerAlumno"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etNombreProyecto"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:hint="Nombre del proyecto"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etEmpresa"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:hint="Empresa u organización"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etFechaInicio"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:hint="Fecha de inicio (DD/MM/AAAA)"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Estado y Avance -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado y Avance"
            android:textColor="#4299E1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerEstado"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etAvance"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:hint="Avance (%)"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etObservaciones"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#F7FAFC"
            android:hint="Observaciones"
            android:gravity="top"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="#E2E8F0"
                android:text="CANCELAR"
                android:textColor="#718096" />

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="#48BB78"
                android:text="GUARDAR"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
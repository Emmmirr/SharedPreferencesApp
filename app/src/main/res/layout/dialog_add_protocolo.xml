<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTituloFormulario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo Protocolo"
            android:textColor="#1A202C"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Información del Proyecto -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Información del Proyecto"
            android:textColor="#4299E1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerAlumno"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etNombreProyecto"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:hint="Nombre del proyecto"
            android:textColor="#1A202C"
            android:textColorHint="#718096"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerBancoProyecto"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etAsesor"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:hint="Asesor interno"
            android:textColor="#1A202C"
            android:textColorHint="#718096"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Información de la Empresa -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Información de la Empresa"
            android:textColor="#4299E1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etNombreEmpresa"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:hint="Nombre de la empresa"
            android:textColor="#1A202C"
            android:textColorHint="#718096"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerGiro"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etRFC"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:hint="RFC"
            android:textColor="#1A202C"
            android:textColorHint="#718096"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Dirección de la Empresa -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección de la Empresa"
            android:textColor="#4299E1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etDomicilio"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:hint="Domicilio"
            android:textColor="#1A202C"
            android:textColorHint="#718096"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etColonia"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:hint="Colonia"
            android:textColor="#1A202C"
            android:textColorHint="#718096"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etCodigoPostal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:hint="Código postal"
            android:inputType="number"
            android:textColor="#1A202C"
            android:textColorHint="#718096"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etCiudad"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:hint="Ciudad"
            android:textColor="#1A202C"
            android:textColorHint="#718096"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etCelular"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:hint="Teléfono"
            android:inputType="phone"
            android:textColor="#1A202C"
            android:textColorHint="#718096"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Información Adicional -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Información Adicional"
            android:textColor="#4299E1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etMision"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#F7FAFC"
            android:hint="Misión de la empresa"
            android:gravity="top"
            android:textColor="#1A202C"
            android:textColorHint="#718096"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Contactos de la Empresa -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contactos de la Empresa"
            android:textColor="#4299E1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Titular de la empresa -->
        <EditText
            android:id="@+id/etTitular"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:hint="Nombre del titular de la empresa"
            android:textColor="#1A202C"
            android:textColorHint="#718096"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etPuestoTitular"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:hint="Puesto del titular"
            android:textColor="#1A202C"
            android:textColorHint="#718096"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Asesor externo -->
        <EditText
            android:id="@+id/etAsesorExterno"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:hint="Nombre del asesor externo"
            android:textColor="#1A202C"
            android:textColorHint="#718096"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etPuestoAsesor"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:hint="Puesto del asesor externo"
            android:textColor="#1A202C"
            android:textColorHint="#718096"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Firmante del convenio -->
        <EditText
            android:id="@+id/etFirmante"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:hint="Persona que firmará el convenio"
            android:textColor="#1A202C"
            android:textColorHint="#718096"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etPuestoFirmante"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F7FAFC"
            android:hint="Puesto del firmante"
            android:textColor="#1A202C"
            android:textColorHint="#718096"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="#E2E8F0"
                android:text="CANCELAR"
                android:textColor="#718096" />

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="#48BB78"
                android:text="GUARDAR"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
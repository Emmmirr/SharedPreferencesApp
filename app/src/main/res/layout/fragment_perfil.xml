<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".PerfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card con foto e informaciÃ³n principal -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <!-- Imagen de perfil -->
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#E3F2FD">

                    <ImageView
                        android:id="@+id/ivProfileImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user"
                        android:contentDescription="Imagen de perfil"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackgroundBorderless" />

                </androidx.cardview.widget.CardView>

                <!-- BotÃ³n cambiar foto -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChangePhoto"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="ðŸ“· Cambiar Foto"
                    android:textSize="12sp"
                    android:textColor="#4299E1"
                    android:layout_marginBottom="16dp" />

                <!-- Nombre completo del usuario -->
                <TextView
                    android:id="@+id/tvDisplayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1A202C"
                    android:layout_marginBottom="8dp"
                    android:gravity="center" />

                <!-- Email/Cuenta del usuario -->
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="usuario@ejemplo.com"
                    android:textSize="16sp"
                    android:textColor="#718096"
                    android:layout_marginBottom="12dp"
                    android:gravity="center" />

                <!-- MÃ©todo de autenticaciÃ³n -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#E6F3FF">

                    <TextView
                        android:id="@+id/tvAuthMethod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Autenticado con: Normal"
                        android:textSize="12sp"
                        android:textColor="#4299E1"
                        android:textStyle="bold"
                        android:padding="8dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Card de informaciÃ³n personal detallada -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¤"
                        android:textSize="20sp"
                        android:layout_marginEnd="8dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="InformaciÃ³n Personal"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A202C" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:padding="12dp"
                    android:background="#F7FAFC">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Nombre:"
                        android:textStyle="bold"
                        android:textColor="#4A5568"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tvFullName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sin especificar"
                        android:textColor="#2D3748"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:padding="12dp"
                    android:background="#F7FAFC">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Nacimiento:"
                        android:textStyle="bold"
                        android:textColor="#4A5568"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tvBirthDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sin especificar"
                        android:textColor="#2D3748"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:padding="12dp"
                    android:background="#F7FAFC">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Cuenta:"
                        android:textStyle="bold"
                        android:textColor="#4A5568"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tvAccount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sin especificar"
                        android:textColor="#2D3748"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="#F7FAFC">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="ContraseÃ±a:"
                        android:textStyle="bold"
                        android:textColor="#4A5568"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tvPasswordStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                        android:textColor="#2D3748"
                        android:textSize="14sp" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnChangePassword"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="Cambiar"
                        android:textSize="12sp"
                        android:textColor="#4299E1"
                        android:minWidth="0dp"
                        android:paddingHorizontal="8dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card de completitud del perfil (ESTA CARD NO ESTABA EN TU XML PERO LA DEJÃ‰ PORQUE TU JAVA LA USA) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š"
                        android:textSize="20sp"
                        android:layout_marginEnd="8dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Completitud del Perfil"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A202C" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tvProfileCompleteness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perfil completado: 0%"
                    android:textSize="14sp"
                    android:textColor="#4299E1"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />
                <ProgressBar
                    android:id="@+id/progressCompleteness"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="#4299E1"
                    android:progressBackgroundTint="#E2E8F0" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card de acciones -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš™ï¸"
                        android:textSize="20sp"
                        android:layout_marginEnd="8dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ConfiguraciÃ³n y Acciones"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A202C" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:text="Editar InformaciÃ³n Personal"
                    android:textSize="16sp"
                    app:backgroundTint="#4299E1"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_menu_edit"
                    app:iconGravity="start"/>

                <!-- BOTÃ“N AÃ‘ADIDO -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExportPdf"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:text="Exportar Perfil a PDF"
                    android:textSize="16sp"
                    android:textColor="#3182CE"
                    app:strokeColor="#3182CE"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_menu_save"
                    app:iconGravity="start"
                    app:iconTint="#3182CE"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogout"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Cerrar SesiÃ³n"
                    android:textSize="16sp"
                    android:textColor="#E53E3E"
                    app:strokeColor="#E53E3E"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_lock_power_off"
                    app:iconGravity="start"
                    app:iconTint="#E53E3E" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

    </LinearLayout>
</ScrollView>